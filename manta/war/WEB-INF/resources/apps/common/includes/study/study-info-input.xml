										</xforms:itemset>
										<xforms:alert>
											<xforms:output
												value="concat('Enter a value for the ', name(), ' field')" />
										</xforms:alert>
									</xforms:select1>
								</div>
								<div>
									<xforms:select1 appearance="minimal" ref="anticoagulant">
										<xforms:label class="fixed-width">Anticoagulant
										</xforms:label>
										<xforms:item>
											<xforms:label><!-- Nullable -->
											</xforms:label>
											<xforms:value />
										</xforms:item>
										<xforms:itemset model="mod-study-info"
