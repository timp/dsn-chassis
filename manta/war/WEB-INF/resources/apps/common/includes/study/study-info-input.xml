											<xforms:itemset model="mod-study-info"
												nodeset="instance('ins-month-items')/month">
												<xforms:label ref="label" />
												<xforms:value ref="value" />
											</xforms:itemset>
											<xforms:alert>
												<xforms:output
													value="concat('Enter a value for the ', name(), ' field')" />
											</xforms:alert>
