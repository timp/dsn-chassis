<div 
	xmlns="http://www.w3.org/1999/xhtml" 
	xmlns:xforms="http://www.w3.org/2002/xforms" 
	xmlns:ev="http://www.w3.org/2001/xml-events">

	<h2>(2) Permissions</h2>

	<h3>Administrators</h3>
             	
	<xforms:group ref="instance('ins-draft-entry')/atom:content/draft/acl-entry-container/atom:entry/atom:content/acl/groups/group[@name='administrators']">
            	
		<table>
			<tr>
				<td>
	                  <xforms:trigger>
	                      <xforms:label><img src="/apps/contributor/common/add.gif"/></xforms:label>
	                      <xforms:insert 
	                      	ev:event="DOMActivate" 
	                      	context="." 
	                      	nodeset="user" 
	                      	at="1" 
	                      	position="after" 
	                      	origin="instance('ins-user-template')"/>
	                  </xforms:trigger>
				</td>
				<td>
	                  <xforms:trigger>
	                      <xforms:label>Add an Administrator</xforms:label>
	                      <xforms:insert 
	                      	ev:event="DOMActivate" 
	                      	context="." 
	                      	nodeset="user" 
	                      	at="1" 
	                      	position="after" 
	                      	origin="instance('ins-user-template')"/>
	                  </xforms:trigger>
				</td>
			</tr>
			<xforms:repeat nodeset="user" id="rep-owner">
				<tr>
					<td>
	                      <xforms:trigger ref=".">
	                          <xforms:delete 
	                          	ev:event="DOMActivate" 
		                       	context="." 
		                       	nodeset="." 
	                          	at="index('rep-owner')"/>
	                          <xforms:label><img src="/apps/contributor/common/remove.gif"/></xforms:label>
	                      </xforms:trigger>
					</td>
					<td>
						<xforms:input ref=".">
							<xforms:label>Email Address:</xforms:label>
						</xforms:input>
					</td>
				</tr>
			</xforms:repeat>
		</table>

	</xforms:group>

	<p>
		<xforms:trigger>
			<xforms:label>&lt; Previous</xforms:label>
			<xforms:action ev:event="DOMActivate">
				<xforms:setvalue ref="instance('ins-draft-entry')/atom:content/draft/wizard-pane" value="'study-terms'"/>
			</xforms:action>
		</xforms:trigger>
		
		<xforms:trigger>
			<xforms:label>Next &gt;</xforms:label>
			<xforms:action ev:event="DOMActivate">
				<xforms:setvalue ref="instance('ins-draft-entry')/atom:content/draft/wizard-pane" value="'acknowledgements'"/>
			</xforms:action>
		</xforms:trigger>

	</p>

	<p>

		<xforms:submit submission="sub-put-draft-entry">
			<xforms:label>Save As Draft</xforms:label>
		</xforms:submit>

		<xforms:trigger appearance="minimal">
			<xforms:label>skip to end &gt;&gt;</xforms:label>
			<xforms:action ev:event="DOMActivate">
				<xforms:setvalue ref="instance('ins-draft-entry')/atom:content/draft/wizard-pane" value="'review'"/>
			</xforms:action>
		</xforms:trigger>
		
	</p>

</div>