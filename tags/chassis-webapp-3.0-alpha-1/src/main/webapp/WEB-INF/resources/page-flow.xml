<controller xmlns="http://www.orbeon.com/oxf/controller"
        xmlns:oxf="http://www.orbeon.com/oxf/processors">

    <!-- Files to serve directly (and exclude files under /[app]/service/) -->
    <files path="(?!/([^/]+)/service/).+\.(gif|css|pdf|json|js|png|jpg|xsd|htc|ico|swf|html|txt)" matcher="regexp"/>
    <!-- Also exclude .xml files handled by Form Runner -->
    <files path="(?!/(fr|([^/]+)/service)/).+\.xml" matcher="regexp" mediatype="application/xml"/>
    <!-- For the following we override the standard mediatype to help browsers -->
    <files path="(?!/([^/]+)/service/).+\.(java|xq)" matcher="regexp" mediatype="text/plain"/>
    <files path="(?!/([^/]+)/service/).+\.jar" matcher="regexp" mediatype="application/zip"/>

    <!-- Redirect to the Home application -->
    <page id="root" path="/(welcome/?)?" matcher="regexp">
        <action><result page="home"/></action>
    </page>

    <!-- Welcome application -->
    <page id="home" path="/home/" model="apps/home/page-flow.xml"/>

    <!-- Dispatch request to a specific application -->
    <page id="apps" path="/([^/]+)/.*" matcher="regexp" model="apps/${1}/page-flow.xml"/>

    <!-- "Not Found" page displayed when no page matches the request path -->
    <page id="not-found" path="/not-found" view="/config/not-found.xhtml"/>

    <epilogue url="/config/epilogue.xpl"/>
    <not-found-handler page="not-found"/>
    
</controller>
