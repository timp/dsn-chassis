                <plugin>
                <groupId>com.wakaleo.schemaspy</groupId>
                <artifactId>maven-schemaspy-plugin</artifactId>
                 <version>5.0.4-SNAPSHOT</version>
                 <configuration>
                   <databaseType>mysql</databaseType>
                   <database>chassisDb</database>
                   <host>${chassisDb_host}</host>
                   <user>${chassisDb_user}</user>
                   <!-- sets password -->
                   <connprops>/etc/chassis-isomorphic/chassisDb.properties</connprops>
                   <!-- set in settings.xml eg 
                   <localRepository>/var/lib/jenkins/.m2/repository</localRepository>
