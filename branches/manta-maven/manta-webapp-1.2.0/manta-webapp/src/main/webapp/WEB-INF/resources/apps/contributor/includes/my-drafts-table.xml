<div xmlns="http://www.w3.org/1999/xhtml"
    xmlns:xforms="http://www.w3.org/2002/xforms"
    xmlns:fr="http://orbeon.org/oxf/xml/form-runner"
    xmlns:xxforms="http://orbeon.org/oxf/xml/xforms"
    xmlns:ev="http://www.w3.org/2001/xml-events" >
    
    <h2>Draft studies</h2>
    
    <p>Studies awaiting completion, only accessible by you or a nominated administrator.
    </p>
    
    <xforms:group ref="instance('ins-study-feed')[empty(atom:entry[app:control/draft/text() = 'yes'])]">
        
        <!-- When no drafts. -->
    </xforms:group>
    
    <xforms:group ref="instance('ins-study-feed')[exists(atom:entry[app:control/draft/text() = 'yes'])]">
        
        <span id="list-of-studies-container">
            
            <fr:datatable width="100%">
                <thead>
                    <tr>
                        <th fr:sortable="true" fr:resizeable="true">ID</th>
                        <th fr:sortable="true" fr:resizeable="true">Title</th>
                        <th fr:sortable="true" fr:resizeable="true">Created</th>
                        <!--		    				<th fr:sortable="true" fr:resizeable="true">Creator</th>-->
                        <th fr:sortable="false" fr:resizeable="true">Administrators</th>
                        <th>Actions</th>
                    </tr>
                </thead>
                <tbody>
                    <xforms:repeat id="study-list" nodeset="xxforms:sort(instance('ins-study-feed')/atom:entry[app:control/draft/text() = 'yes'], atom:published, 'text', 'descending')">
                        <tr class="repeated-element">
                            <td>
                                <a href="register-study-wizard?draft={atom:link[@rel='edit']/@href}"><xforms:output value="manta:id"/></a>
                            </td>
                            <td>
                                <a href="register-study-wizard?draft={atom:link[@rel='edit']/@href}"><xforms:output value="atom:title"/></a>
                            </td>
                            <td>
                                <xforms:output ref="atom:published" xxforms:format="format-dateTime(., '[Y0001]-[M01]-[D01]')"/>
                            </td>
                            <!--
                                <td>
                                <xforms:output value="atom:author/atom:email"/>
                                </td>
                            -->
                            <td>
                                <xforms:repeat nodeset="atom:link[@rel='http://www.cggh.org/2010/chassis/terms/groups']//atombeat:group[@id='GROUP_ADMINISTRATORS']/atombeat:member">
                                    <div>
                                        <xforms:output ref="."/>			
                                    </div>
                                </xforms:repeat>
                                <!-- <xforms:output value="string-join( atom:link[@rel='http://purl.org/atombeat/rel/security-descriptor']//atombeat:group[@id='GROUP_ADMINISTRATORS']/atombeat:member , ' ' )"/> -->
                            </td>
                            <td><span class="view-study-link-container"><a class="btn" href="register-study-wizard?draft={atom:link[@rel='edit']/@href}">Edit</a></span>
                                <xforms:group ref="atom:link[@rel='edit' and contains(@atombeat:allow, 'DELETE')]">
                                    <span>
                                        <xforms:switch>
                                            <xforms:case id="delete-study">
                                                <xforms:trigger>
                                                    <xforms:label>Delete</xforms:label>
                                                    <xforms:toggle case="confirm-delete-study" ev:event="DOMActivate"/>
                                                </xforms:trigger>
                                            </xforms:case>
                                            <xforms:case id="confirm-delete-study">
                                                <br/>
                                                <strong>Are you sure that you want to delete this draft?</strong><br/>
                                                <xforms:trigger>
                                                    <xforms:label>Yes - I'm sure</xforms:label>
                                                    <xforms:action ev:event="DOMActivate">
                                                        <xforms:setvalue bind="delete-bind" value="xxforms:repeat-nodeset('study-list')[index('study-list')]//atom:link[@rel='edit']/@href"/>
                                                        <xforms:send submission="sub-deprecate-study"/>
                                                    </xforms:action>
                                                </xforms:trigger> 
                                                <xforms:trigger>
                                                    <xforms:label>No</xforms:label>
                                                    <xforms:toggle case="delete-study" ev:event="DOMActivate"/>
                                                </xforms:trigger>
                                            </xforms:case>
                                        </xforms:switch>
                                    </span>
                                </xforms:group></td>
                        </tr>
                    </xforms:repeat>
                </tbody>
            </fr:datatable>
            
        </span>
        
    </xforms:group>
    
</div>