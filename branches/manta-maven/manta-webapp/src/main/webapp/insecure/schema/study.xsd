		    <xs:enumeration value="TQ" />
			<xs:enumeration value="Other" />
		</xs:restriction>
	</xs:simpleType>
	
	<xs:simpleType name="drugName">
		<xs:restriction base="xs:string">
			<xs:enumeration value="" />
