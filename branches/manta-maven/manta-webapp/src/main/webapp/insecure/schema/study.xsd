  <xs:element name="pmid" type="optionalInteger"/>
  
  <xs:element name="maxAge" type="optionalDecimal"/>
  <xs:element name="minAge" type="optionalDecimal"/>
  
  <xs:element name="minParasitaemia" type="optionalDecimal"/>
