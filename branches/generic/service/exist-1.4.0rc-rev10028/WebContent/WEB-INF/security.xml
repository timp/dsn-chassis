<?xml version="1.0" encoding="UTF-8"?>
<beans:beans 
  xmlns:beans="http://www.springframework.org/schema/beans"
  xmlns="http://www.springframework.org/schema/security"
  xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
  xsi:schemaLocation="http://www.springframework.org/schema/beans http://www.springframework.org/schema/beans/spring-beans-2.0.xsd
              http://www.springframework.org/schema/security http://www.springframework.org/schema/security/spring-security-2.0.4.xsd">  



  <!--+
      | 
      | Security requires an authentication provider.
      | For the development environment, we'll import a definition of a simple
      | authentication provider from the classpath.
      | (This file can be found in the generic/lib/java project.)
      |
      +-->
   
  <beans:import resource="classpath:/dev/configuration/spring/authentication-provider.xml"/>



  <!--+
      |
      | Begin definition of HTTP authentication and authorisation rules. 
      |
      +-->
        
  <http 
    auto-config="false" 
    realm="chassis-development-realm" 
    create-session="never"> <!-- N.B. never create sessions, this messes with eXist authentication -->
  
  
    <!--+
        |
        | HTTP authentication mechanisms.
        | For the development environment, use HTTP basic.
        |
        + -->
        
    <http-basic/>


    <!--+
        |
        | Begin HTTP authorisation rules for this Web application.
        |
        +-->
        
    
    <!-- creating studies -->
    
    <intercept-url 
      pattern="/atom/edit/studies**" 
      method="POST" 
      access="ROLE_CHASSIS_SUBMITTER, ROLE_CHASSIS_ADMINISTRATOR"/>

    
    <!-- updating studies -->

    <intercept-url 
      pattern="/atom/edit/studies**" 
      method="PUT" 
      access="ROLE_CHASSIS_SUBMITTER, ROLE_CHASSIS_ADMINISTRATOR"/>
     
     
    <!-- retrieving studies -->
   
    <intercept-url 
      pattern="/atom/edit/studies**" 
      method="GET" 
      access="ROLE_CHASSIS_SUBMITTER, ROLE_CHASSIS_GATEKEEPER, ROLE_CHASSIS_CURATOR, ROLE_CHASSIS_COORDINATOR, ROLE_CHASSIS_ADMINISTRATOR"/>
    
    
    <!-- querying studies -->

    <intercept-url 
      pattern="/query/studies**" 
      method="GET" 
      access="ROLE_CHASSIS_SUBMITTER, ROLE_CHASSIS_GATEKEEPER, ROLE_CHASSIS_CURATOR, ROLE_CHASSIS_COORDINATOR, ROLE_CHASSIS_ADMINISTRATOR"/>
    
    
    <!-- creating datasets -->
    
    <intercept-url 
      pattern="/atom/edit/datasets**" 
      method="POST" 
      access="ROLE_CHASSIS_SUBMITTER, ROLE_CHASSIS_ADMINISTRATOR"/>

    
    <!-- updating datasets -->

    <intercept-url 
      pattern="/atom/edit/datasets**" 
      method="PUT" 
      access="ROLE_CHASSIS_SUBMITTER, ROLE_CHASSIS_ADMINISTRATOR"/>
     
     
    <!-- retrieving datasets -->
   
    <intercept-url 
      pattern="/atom/edit/datasets**" 
      method="GET" 
      access="ROLE_CHASSIS_SUBMITTER, ROLE_CHASSIS_GATEKEEPER, ROLE_CHASSIS_CURATOR, ROLE_CHASSIS_COORDINATOR, ROLE_CHASSIS_ADMINISTRATOR"/>
    
    
    <!-- querying datasets -->

    <intercept-url 
      pattern="/query/datasets**" 
      method="GET" 
      access="ROLE_CHASSIS_SUBMITTER, ROLE_CHASSIS_GATEKEEPER, ROLE_CHASSIS_CURATOR, ROLE_CHASSIS_COORDINATOR, ROLE_CHASSIS_ADMINISTRATOR"/>
    
    
    <!-- creating datafiles -->
    
    <intercept-url 
      pattern="/atom/edit/datafiles**" 
      method="POST" 
      access="ROLE_CHASSIS_SUBMITTER, ROLE_CHASSIS_ADMINISTRATOR"/>

    
    <!-- updating datafiles -->

    <intercept-url 
      pattern="/atom/edit/datafiles**" 
      method="PUT" 
      access="ROLE_CHASSIS_SUBMITTER, ROLE_CHASSIS_ADMINISTRATOR"/>
     
     
    <!-- retrieving datafiles -->
   
    <intercept-url 
      pattern="/atom/edit/datafiles**" 
      method="GET" 
      access="ROLE_CHASSIS_SUBMITTER, ROLE_CHASSIS_GATEKEEPER, ROLE_CHASSIS_CURATOR, ROLE_CHASSIS_COORDINATOR, ROLE_CHASSIS_ADMINISTRATOR"/>
    
    
    <!-- querying datafiles -->

    <intercept-url 
      pattern="/query/datafiles**" 
      method="GET" 
      access="ROLE_CHASSIS_SUBMITTER, ROLE_CHASSIS_GATEKEEPER, ROLE_CHASSIS_CURATOR, ROLE_CHASSIS_COORDINATOR, ROLE_CHASSIS_ADMINISTRATOR"/>


    <!-- creating media -->
    
    <intercept-url 
      pattern="/atom/edit/media**" 
      method="POST" 
      access="ROLE_CHASSIS_SUBMITTER, ROLE_CHASSIS_ADMINISTRATOR"/>

    
    <!-- updating media -->

    <intercept-url 
      pattern="/atom/edit/media**" 
      method="PUT" 
      access=""/>
     
     
    <!-- retrieving media -->
   
    <intercept-url 
      pattern="/atom/edit/media**" 
      method="GET" 
      access="ROLE_CHASSIS_SUBMITTER, ROLE_CHASSIS_GATEKEEPER, ROLE_CHASSIS_CURATOR, ROLE_CHASSIS_COORDINATOR, ROLE_CHASSIS_ADMINISTRATOR"/>
    
    
    <!-- creating reviews -->
    
    <intercept-url 
      pattern="/atom/edit/reviews**" 
      method="POST" 
      access="ROLE_CHASSIS_GATEKEEPER, ROLE_CHASSIS_ADMINISTRATOR"/>

    
    <!-- updating reviews -->

    <intercept-url 
      pattern="/atom/edit/reviews**" 
      method="PUT" 
      access=""/>
     
     
    <!-- retrieving reviews -->
   
    <intercept-url 
      pattern="/atom/edit/reviews**" 
      method="GET" 
      access="ROLE_CHASSIS_SUBMITTER, ROLE_CHASSIS_GATEKEEPER, ROLE_CHASSIS_CURATOR, ROLE_CHASSIS_COORDINATOR, ROLE_CHASSIS_ADMINISTRATOR"/>
    
    
    
    
    <!-- all other URLs are administrator only -->
    
    <intercept-url pattern="/**" access="ROLE_CHASSIS_ADMINISTRATOR" />

  </http>
  
  

</beans:beans>