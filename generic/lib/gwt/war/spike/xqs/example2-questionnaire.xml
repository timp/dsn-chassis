<?xml version="1.0" encoding="UTF-8"?>
<questionnaire 
  xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance" 
  xsi:noNamespaceSchemaLocation="xquestion.xsd"
  defaultPrefix="foo"
  defaultNamespaceUri="http://example.org/foo">

  <model>
    <element name="person"/>
  </model>
  
  <view>

    <html>
      <h1>Personal Details Questionnaire</h1>
      <h2>The Questionnaire to End All Questionnaires</h2>  
    </html>

    <label>Please enter your personal details...</label>
    
    <question>
      <model>
        <element name="title"/>
      </model>
      <view>
        <select1>
          <label>Title:</label>
          <item>
            <label>Mr</label>
            <value>mr</value>
          </item>
          <item>
            <label>Mrs</label>
            <value>mrs</value>
          </item>
          <item>
            <label>Miss</label>
            <value>miss</value>
          </item>
          <item>
            <label>Ms</label>
            <value>ms</value>
          </item>
        </select1>
      </view>
    </question>

    <question>  
      <model>
        <element name="givenName"/>
      </model>
      <view>
        <input class="givenName">
          <label>What is your given name?</label>
          <hint>Enter your first or given name.</hint>      
        </input>
      </view>
    </question>
  
    <question>
      <model>
        <element name="familyName"/>
      </model>
      <view>
        <secret class="familyName">
          <label>What is your family name?</label>
          <hint>What you type will be hidden.</hint>
        </secret>
      </view>
    </question>
  
    <question>  
      <model>
        <element name="middleName"/>
      </model>
      <view>
        <input>
          <label>What is your middle name?</label>
        </input>
      </view>
    </question>
  
    <question repeatable="yes">
      <model>
        <element name="email"/>
      </model>
      <view>
        <input>
          <label>What is your email address?</label>        
        </input>
        <html><em>some more text...</em></html>
      </view>
    </question>
  
    <questionnaire repeatable="yes">
    
      <model>
        <element name="address"/>
      </model>
      
      <view>
      
        <html><h3>Address</h3></html>
        
        <question>  
          <model>
            <element name="houseNumber"/>
          </model>
          <view>
            <html><strong>some preamble...</strong></html>
            <input>
              <label>House name or number?</label>
            </input>
            <label>...some afterthoughts</label>
          </view>
        </question>
    
        <question>
          <model>
            <element name="street"/>
          </model>
          <view>
            <input>
              <label>Street name?</label>
            </input>
          </view>
        </question>
            
      </view>

    </questionnaire>
    
    <question>
      <model>
        <element name="describe"/>
      </model>
      <view>
        <textarea class="describe">
          <label>Describe yourself, in your own words...</label>
          <hint>Say whatever comes into your head!</hint>
        </textarea>
      </view>
    </question>
  
  </view>

</questionnaire>