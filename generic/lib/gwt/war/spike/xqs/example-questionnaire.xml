<?xml version="1.0" encoding="UTF-8"?>
<questionnaire 
  xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance" 
  xsi:noNamespaceSchemaLocation="http://dsn-chassis.googlecode.com/svn/trunk/generic/lib/gwt/src/main/resources/xquestion/xquestion.xsd"
  defaultPrefix="foo"
  defaultNamespaceUri="http://example.org/foo">

  <model>
    <element name="person"/>
  </model>

  <view class="personQuestionnaire">

    <html><h2>Personal Information Questionnaire</h2></html>
    
    <html><h3>Your Name</h3></html>

    <question id="givenName">
      <model>
        <element name="givenName"/>
      </model>
      <view class="givenName">
        <input>
          <label>What is your given name?</label>
          <hint>your given name in Western cultures is typically your first name</hint>
        </input>
        <html><em>This question has custom styling via a CSS class on the question widget.</em></html>
      </view>
    </question>   
    
    <question id="familyName">
      <model>
        <element name="familyName"/>
      </model>
      <view>
        <input class="familyName">
          <label>What is your family name?</label>
          <hint>your family name in Western cultures is typically your last name</hint>
        </input>
        <html><em>This question has custom styling via a CSS class on the form control (input) widget.</em></html>
      </view>
    </question>
    
    <html><h3>Your Personal Details</h3></html>
    
    <question id="title">
      <model>
        <element name="title"/>
      </model>
      <view>
        <select1 appearance="minimal">
          <label>What is your title?</label>
          <hint>select your title, e.g., Mr, Mrs or Ms</hint>
          <item>
            <label>Mr</label>
            <value>mr</value>
          </item>
          <item>
            <label>Mrs</label>
            <value>mrs</value>
          </item>
          <item>
            <label>Miss</label>
            <value>miss</value>
          </item>
          <item>
            <label>Ms</label>
            <value>ms</value>
          </item>
        </select1>
        <html><em>This question allows you to select only one from a list of options.  The form control used has the <strong>minimal</strong> appearance.</em></html>
      </view>
    </question>
    
    <question id="dob">
      <model>
        <element name="dob" type="date"/>
      </model>
      <view>
        <input>
          <label>What is your date of birth?</label>
          <hint>the day on which you were born</hint>
        </input>
        <html><em>Put the cursor in the text box and a date picker should appear.</em></html>
      </view>
    </question>

    <question id="pin">
      <model>
        <element name="pin"/>
      </model>
      <view>
        <secret>
          <label>What is your bank card PIN?</label>
          <hint>don't worry, what you type will be secret</hint>
        </secret>
        <html><em>What you type will be hidden from others.</em></html>
      </view>
    </question>
    
    
    <html><h3>Your Contact Details</h3></html>
    
    <question id="email" repeatable="yes">
      <model>
        <element name="email"/>
      </model>
      <view>
        <input>
          <label>What is your email address?</label>        
        </input>
        <html><em>This is a <strong>repeatable</strong> question, click the "+" button below to add another.</em></html>
      </view>
    </question>
  
    
    <questionnaire repeatable="yes">
    
      <model>
        <element name="address"/>
      </model>
      
      <view class="address">
      
        <html><h4>Postal Address</h4></html>
        
        <html><em>This is an example of a nested questionnaire. This questionnaire also has custom styling via a CSS class on the questionnaire widget.</em></html>
        
        <question id="houseNumber">  
          <model>
            <element name="houseNumber"/>
          </model>
          <view>
            <input>
              <label>What is your house name or number?</label>
            </input>
          </view>
        </question>
    
        <question id="street">
          <model>
            <element name="street"/>
          </model>
          <view>
            <input>
              <label>What is your street name?</label>
            </input>
          </view>
        </question>
        
        <html><em>This questionnaire is also repeatable, click the "+" button below to add another.</em></html>
      </view>

    </questionnaire>
    
    <html><h3>Your Likes &amp; Dislikes</h3></html>
    
    
    <question id="flavour">
      <model>
        <element name="favouriteFlavour"/>
      </model>
      <view>
        <select1 appearance="full">
          <label>What is your favourite ice cream flavour?</label>
          <hint>select only one!</hint>
          <item>
            <label>Vanilla</label>
            <value>van</value>
          </item>
          <item>
            <label>Chocolate</label>
            <value>cho</value>
          </item>
          <item>
            <label>Strawberry</label>
            <value>str</value>
          </item>
        </select1>
        <html><em>This question allows you to select only one from a list of options. The form control used has the <strong>full</strong> appearance.</em></html>
      </view>
    </question>

    <question id="vegetables">
      <model>
        <element name="vegetable"/>
      </model>
      <view>
        <select appearance="full">
          <label>What vegetables do you like?</label>
          <hint>select as many as you like!</hint>
          <item>
            <label>Potato</label>
            <value>pot</value>
          </item>
          <item>
            <label>Carrot</label>
            <value>car</value>
          </item>
          <item>
            <label>Peas</label>
            <value>pea</value>
          </item>
          <item>
            <label>Broccoli</label>
            <value>bro</value>
          </item>
        </select>
        <html><em>Select has many as you like!</em></html>
      </view>
    </question>
    
    <html><h3>Your Personal Statement</h3></html>
    
    <question id="describe">
      <model>
        <element name="describe"/>
      </model>
      <view>
        <textarea class="describe">
          <label>Describe yourself, in your own words...</label>
          <hint>Say whatever comes into your head!</hint>
        </textarea>
        <html><em>This question has custom styling via a CSS class on the form control (a text area).</em></html>
      </view>
    </question>
  
    
  </view>

</questionnaire>