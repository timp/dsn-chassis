<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE ui:UiBinder SYSTEM "http://dl.google.com/gwt/DTD/xhtml.ent">
<ui:UiBinder 
	xmlns:ui="urn:ui:com.google.gwt.uibinder"
	xmlns:g="urn:import:com.google.gwt.user.client.ui" 
	ui:generateFormat="com.google.gwt.i18n.rebind.format.PropertiesFormat"
	ui:generateKeys="com.google.gwt.i18n.rebind.keygen.MD5KeyGenerator"
	ui:generateLocales="default"
	>

	<ui:style>
	
		ul li {
			
			padding-bottom: 5px;
				
		}
		
		ul ol {
			padding-top: 5px;
		}
	
		.error {
			color: red;
		}
		
		.number {
			font-weight: bold;
		}
		
		.fileTypeName {
			font-weight: bold;
			font-style: italic;
		}

	</ui:style>


	<g:HTMLPanel>

		<h1>
			<ui:msg>Curator</ui:msg>
			-
			<ui:msg>Home</ui:msg>
		</h1>

        <g:HTMLPanel ui:field="errorPanel">
			<g:Label>
        		<ui:msg>There has been an unexpected error: </ui:msg>
			</g:Label>
			<g:FlowPanel ui:field="errorMessage"></g:FlowPanel>
        </g:HTMLPanel>

		<g:HTMLPanel ui:field="pendingPanel">
			<p>
				<ui:msg>pending... (counting studies)</ui:msg>
			</p>
		</g:HTMLPanel>

		<g:HTMLPanel ui:field="mainPanel">

            <h2><ui:msg>Studies</ui:msg></h2>
<!--  
			<local:ListStudiesWidget ui:field="listStudiesWidgetUiField"/>
 -->
        

		</g:HTMLPanel>

	</g:HTMLPanel>

</ui:UiBinder>