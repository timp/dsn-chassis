<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE ui:UiBinder SYSTEM "http://dl.google.com/gwt/DTD/xhtml.ent">
<ui:UiBinder 
	xmlns:ui="urn:ui:com.google.gwt.uibinder"
	xmlns:g="urn:import:com.google.gwt.user.client.ui" 
	ui:generateFormat="com.google.gwt.i18n.rebind.format.PropertiesFormat"
	ui:generateKeys="com.google.gwt.i18n.rebind.keygen.MD5KeyGenerator"
	ui:generateLocales="default"
	xmlns:local="urn:import:org.cggh.chassis.wwarn.ui.curator.client"
	>
<!-- 
Manually editted
-->
	<ui:style>
	
		.error {
			color: red;
		}
		
		.number {
			font-weight: bold;
		}
		.widget {
			border: 1px solid teal;
		}
	</ui:style>


	<g:HTMLPanel ui:field="mainPanel" >

    <g:HTMLPanel ui:field="errorPanel" >
			<g:Label>
        		<ui:msg>There has been an unexpected error: </ui:msg>
			</g:Label>
			<g:FlowPanel ui:field="errorMessage"  title="CuratorHome" styleName="{style.error}" ></g:FlowPanel>
    </g:HTMLPanel>

		<g:HTMLPanel ui:field="contentPanel">

            <div id="CuratorHome" title="CuratorHome" class="widget">
            <h1>Curator - Home</h1>
            	<g:FlowPanel ui:field="curatorHomePanel"></g:FlowPanel>
				<local:ListStudiesWidget ui:field="listStudiesWidgetUiField"/>
			</div>
		</g:HTMLPanel>

	</g:HTMLPanel>

</ui:UiBinder>


