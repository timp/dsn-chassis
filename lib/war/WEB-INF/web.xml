<web-app>

  <servlet>
    <servlet-name>LocalhostProxy</servlet-name>
    <servlet-class>org.cggh.chassis.server.proxy.ProxyServlet</servlet-class>
  </servlet>
  
  <servlet-mapping>
    <servlet-name>LocalhostProxy</servlet-name>
    <url-pattern>/prox</url-pattern>
  </servlet-mapping>
  
</web-app>
