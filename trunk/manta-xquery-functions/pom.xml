<project xmlns="http://maven.apache.org/POM/4.0.0" xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance" xsi:schemaLocation="http://maven.apache.org/POM/4.0.0 http://maven.apache.org/xsd/maven-4.0.0.xsd">

	<modelVersion>4.0.0</modelVersion>


	<groupId>org.cggh.chassis</groupId>

	<version>0.1-beta-2-SNAPSHOT</version>


	<artifactId>manta-xquery-functions</artifactId>
	<packaging>jar</packaging>
	<name>manta-xquery-functions</name>
	<url>http://cggh.org</url>
	<repositories>
		<repository>
			<id>atombeat</id>
			<name>AtomBeat Non-Maven Dependencies Repository</name>
			<url>http://atombeat.googlecode.com/svn/repository</url>
		</repository>
	</repositories>
	<properties>
		<project.build.sourceEncoding>UTF-8</project.build.sourceEncoding>
		<org.exist-db.version>1.4.0</org.exist-db.version>
	</properties>

	<build>

		<plugins>

			<plugin>
				<groupId>org.apache.maven.plugins</groupId>
				<artifactId>maven-compiler-plugin</artifactId>
				<version>2.3.2</version>
				<configuration>
					<source>1.6</source>
					<target>1.6</target>
				</configuration>
			</plugin>

		</plugins>

	</build>

	<dependencies>

		<dependency>
			<groupId>org.exist-db</groupId>
			<artifactId>exist</artifactId>
			<version>${org.exist-db.version}</version>
			<scope>provided</scope>
		</dependency>

	</dependencies>

 <scm>
  	<connection>scm:svn:http://dsn-chassis.googlecode.com/svn/trunk/manta-xquery-functions</connection>
  	<developerConnection>scm:svn:https://dsn-chassis.googlecode.com/svn/trunk/manta-xquery-functions</developerConnection>
  	<url>scm:svn:http://dsn-chassis.googlecode.com/svn/trunk/manta-xquery-functions</url>
  </scm>
</project>
