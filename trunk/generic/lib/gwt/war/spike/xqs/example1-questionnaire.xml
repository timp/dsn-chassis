<?xml version="1.0" encoding="UTF-8"?>
<questionnaire
  defaultPrefix="foo"
  defaultNamespaceUri="http://example.org/foo">

  <binding name="person"/>

  <html>
    <h1>Personal Details Questionnaire</h1>
    <h2>The Questionnaire to End All Questionnaires</h2>  
  </html>
  
  <label>Please enter your personal details...</label>

  <question repeatable="no" required="yes">  
    <binding name="givenName"/>
    <label>What is your given name?</label>
    <input type="text" length="30"/>
  </question>

  <question repeatable="no" required="yes">
    <binding name="familyName"/>
    <label>What is your family name?</label>
    <input type="text" length="30"/>
  </question>

  <question repeatable="no" required="yes">  
    <binding name="middleName"/>
    <label>What are your middle names?</label>
    <input type="text" length="30"/>
  </question>

  <question repeatable="yes" required="no">
    <binding name="email"/>
    <label>What is your email address?</label>
    <input type="text" length="30"/>
  </question>

  <questionnaire>
  
    <binding name="address"/>
    
    <html><h3>Address</h3></html>
    
    <question repeatable="no" required="yes">  
      <binding name="houseNumber"/>
      <html><strong>House name or number?</strong></html>
      <input type="text" length="20"/>
    </question>

    <question repeatable="no" required="yes">
      <binding name="street"/>
      <label>Street name?</label>
      <input type="text" length="20"/>
    </question>
    
  </questionnaire>


</questionnaire>