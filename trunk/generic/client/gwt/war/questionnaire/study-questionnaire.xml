<?xml version="1.0" encoding="UTF-8"?>
<questionnaire 
  xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance" 
  xsi:noNamespaceSchemaLocation="http://dsn-chassis.googlecode.com/svn/trunk/generic/lib/gwt/src/main/resources/xquestion/xquestion.xsd"
  defaultPrefix="chassis"
  defaultNamespaceUri="http://www.cggh.org/2009/chassis/atom/xmlns">

  <model>
    <element name="study"/>
  </model>
  
  <view>
  
    <html><h2>Study Questionnaire - General Questions</h2></html>
    
    <html>
    
      <p>Jump to section:</p>
      <ul>
        <li><a href="#startend">Study Start and End</a></li>
        <li><a href="#pi">Principal Investigator(s)</a></li>
        <li><a href="#pathogens">Pathogen Species</a></li>
        <li><a href="#sites">Study Site(s)</a></li>
        <li><a href="#pubs">Publications</a></li>
      </ul>
      
    </html>
    
    <html><h3 id="startend">Study Start and End</h3></html>
  
    <question id="startYear">
      <model>
        <element name="startYear" type="gYear"/>
      </model>
      <view>
        <input>
          <label>What year did the study start?</label>
          <hint>Enter the year in which the study started, e.g., 2006.</hint>
        </input>
      </view>
    </question>

    <question id="endYear">
      <model>
        <element name="endYear" type="gYear"/>
      </model>
      <view>
        <input>
          <label>What year did the study end?</label>
          <hint>Enter the year in which the study ended, e.g., 2008.</hint>
        </input>
      </view>
    </question>
    
    <html><h3 id="pi">Principal Investigator(s)</h3></html>
    
    <questionnaire 
      repeatable="yes">

      <model>
        <element name="principalInvestigator"/>
      </model>
      
      <view>

        <html><p>Who was the principal investigator of this study?</p></html>
        
        <question id="piName">
          <model>
            <element name="name"/>
          </model>
          <view>
            <input>
              <label>Name? </label>
            </input>
          </view>
        </question>

        <question id="piEmail" repeatable="yes">
          <model>
            <element name="email"/>
          </model>
          <view>
            <input>
              <label>Email address? </label>
            </input>
          </view>
        </question>

        <question id="piUri" repeatable="yes">
          <model>
            <element name="uri"/>
          </model>
          <view>
            <input>
              <label>Home page?</label>
              <hint>Enter the URL of a web page that is the person's home page.</hint>
            </input>
          </view>
        </question>

        <question id="piOrg" repeatable="yes">
          <model>
            <element name="org"/>
          </model>
          <view>
            <input>
              <label>Host organisation or institution?</label>
              <hint>Enter the name of the person's host organisation or institution.</hint>
            </input>
          </view>
        </question>

        <html readOnly="hide"><p><em>You can add another principal investigator by clicking the "+" button below.</em></p></html>

      </view>
      
    </questionnaire>
    
    
    <html><h3 id="pathogens">Pathogen Species</h3></html>
    
    <question id="pathogenSpecies">
      <model>
        <element name="pathogenSpecies"/>
      </model>
      <view>
        <select appearance="full">
          <label>What pathogen species were studied?</label>
          <item>
            <label>P. falciparum</label>
            <value>plasmodiumfalciparum</value>
          </item>
          <item>
            <label>P. vivax</label>
            <value>plasmodiumvivax</value>
          </item>
        </select>
      </view>
    </question>

    <html><h3 id="sites">Study Site(s)</h3></html>
    
    <questionnaire repeatable="yes">
      
      <model><element name="site"/></model>
      
      <view>

        <html><p>Describe the site (location) where study subjects were recruited from...</p></html>
        
        <question id="siteCountry">
          <model><element name="country"/></model>
          <view>
            <select1 appearance="minimal">
              <label>Country?</label>
              <item>
                <label>(please select one)</label>
                <value></value>
              </item>
              <item>
                <label>Kenya</label>
                <value>KE</value>
              </item>
              <item>
                <label>Uganda</label>
                <value>UG</value>
              </item>
            </select1>
          </view>
        </question>
        
        <question id="siteRegion">
          <model><element name="region"/></model>
          <view>
            <input>
              <label>Region?</label>
            </input>
          </view>
        </question>

        <question id="siteDistrict">
          <model><element name="district"/></model>
          <view>
            <input>
              <label>District?</label>
            </input>
          </view>
        </question>
              
        <question id="siteLocality">
          <model><element name="locality"/></model>
          <view>
            <input>
              <label>Locality?</label>
            </input>
          </view>
        </question>

        <question id="siteId">
          <model><element name="identifier"/></model>
          <view>
            <input>
              <label>If the study involves more than one site, what identifier (i.e., code) is used for this site in the submitted study data?</label>
            </input>
          </view>
        </question>

        <html readOnly="hide"><p><em>You can add another site by clicking the "+" button below.</em></p></html>

      </view>

    </questionnaire>


    <html><h3 id="pubs">Publications</h3></html>
    
    <questionnaire repeatable="yes">
    
      <model>
        <element name="publication"/>
      </model>
    
      <view>
        <html><p>Is this study described in any published research papers?</p></html>  
        
        <question id="pubTitle">
          <model><element name="title"/></model>
          <view>
            <input>
              <label>Title?</label>
            </input>
          </view>
        </question>

        <question id="pubYear">
          <model><element name="year"/></model>
          <view>
            <input>
              <label>Year?</label>
            </input>
          </view>
        </question>

        <question id="pubJournal">
          <model><element name="journal"/></model>
          <view>
            <input>
              <label>Journal?</label>
            </input>
          </view>
        </question>

        <question id="pubLink" repeatable="yes">
          <model><element name="uri"/></model>
          <view>
            <input>
              <label>Web link?</label>
            </input>
          </view>
        </question>

        <question id="pubDoi">
          <model><element name="doi"/></model>
          <view>
            <input>
              <label>DOI?</label>
            </input>
          </view>
        </question>

        <html readOnly="hide"><p><em>You can add another publication by clicking the "+" button below.</em></p></html>

      </view>
      
    </questionnaire>
    
  </view>


</questionnaire>