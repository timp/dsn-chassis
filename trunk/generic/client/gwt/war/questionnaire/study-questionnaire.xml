<?xml version="1.0" encoding="UTF-8"?>
<questionnaire 
  xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance" 
  xsi:noNamespaceSchemaLocation="http://dsn-chassis.googlecode.com/svn/trunk/generic/lib/gwt/src/main/resources/xquestion/xquestion.xsd"
  defaultPrefix="chassis"
  defaultNamespaceUri="http://www.cggh.org/2009/chassis/atom/xmlns">

  <model>
    <element name="study"/>
  </model>
  
  <view>
  
    <html><h2>Study Questionnaire</h2></html>
    
    <html><h3>Study Start and End</h3></html>
  
    <question id="startYear">
      <model>
        <element name="startYear" type="gYear"/>
      </model>
      <view>
        <input>
          <label>What year did the study start?</label>
          <hint>Enter the year in which the study started, e.g., 2006.</hint>
        </input>
      </view>
    </question>

    <question id="endYear">
      <model>
        <element name="endYear" type="gYear"/>
      </model>
      <view>
        <input>
          <label>What year did the study end?</label>
          <hint>Enter the year in which the study ended, e.g., 2008.</hint>
        </input>
      </view>
    </question>
    
    <html><h3>Principal Investigator(s)</h3></html>
    
    <questionnaire 
      repeatable="yes">

      <model>
        <element name="principalInvestigator"/>
      </model>
      
      <view>

        <html><p>Who was the principal investigator of this study?</p></html>
        
        <question id="piName">
          <model>
            <element name="name" namespaceUri="http://www.w3.org/2005/Atom" prefix="atom"/>
          </model>
          <view>
            <input>
              <label>Name? </label>
            </input>
          </view>
        </question>

        <question id="piEmail" repeatable="yes">
          <model>
            <element name="email" namespaceUri="http://www.w3.org/2005/Atom" prefix="atom"/>
          </model>
          <view>
            <input>
              <label>Email address? </label>
            </input>
          </view>
        </question>

        <question id="piUri" repeatable="yes">
          <model>
            <element name="uri" namespaceUri="http://www.w3.org/2005/Atom" prefix="atom"/>
          </model>
          <view>
            <input>
              <label>Home page?</label>
              <hint>Enter the URL of a web page that is the person's home page.</hint>
            </input>
          </view>
        </question>

        <html><p><em>You can add another principal investigator by clicking the "+" button below.</em></p></html>

      </view>
      
    </questionnaire>
    
    
    <html><h3>Pathogen Species</h3></html>
    
    <question id="pathogenSpecies">
      <model>
        <element name="pathogenSpecies"/>
      </model>
      <view>
        <select appearance="full">
          <label>What pathogen species were studied?</label>
          <item>
            <label>P. falciparum</label>
            <value>plasmodiumfalciparum</value>
          </item>
          <item>
            <label>P. vivax</label>
            <value>plasmodiumvivax</value>
          </item>
        </select>
      </view>
    </question>

  </view>


</questionnaire>