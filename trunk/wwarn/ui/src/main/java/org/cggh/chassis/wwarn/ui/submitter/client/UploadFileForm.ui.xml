<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE ui:UiBinder SYSTEM "http://dl.google.com/gwt/DTD/xhtml.ent">
<ui:UiBinder 
    xmlns:ui="urn:ui:com.google.gwt.uibinder"
    xmlns:g="urn:import:com.google.gwt.user.client.ui"
    ui:generateFormat="com.google.gwt.i18n.rebind.format.PropertiesFormat"
    ui:generateKeys="com.google.gwt.i18n.rebind.keygen.MD5KeyGenerator"
    ui:generateLocales="default">

	<ui:style>
		.requiredFieldMarker {
			color: #FF0000;
			font-weight: normal;
		}
		.optionalFieldMarker {
			font-weight: normal;
		}
		.column {
			float: left;	
			padding-right: 8px;
		}
		.endRow {
			clear: both;	
		}
	</ui:style>
	  
    <g:HTMLPanel>
        
        <g:FormPanel ui:field="formPanel">
        
        	<g:HTMLPanel>
        	
				<p>
					<ui:msg>Fields marked with an asterisk (<span class="{style.requiredFieldMarker}">*</span>) are compulsory.
					</ui:msg>
				</p>
        	
	        	<h4>
	        		<ui:msg>File and File Type</ui:msg>
	        		
	        		<span class="{style.requiredFieldMarker}"><ui:msg>*</ui:msg></span>
	        	</h4>
	        	
	        	<p>
	        		<ui:msg>Please select the file that you want to upload and also please specify the file type.</ui:msg>
	        	</p>
	        	
	        	<p>
	        		<div class="{style.column}">
	        			<g:FileUpload ui:field="fileInput"/>
	        		</div> 

	        		<div class="{style.column}">
		        		<g:ListBox ui:field="typeInput" visibleItemCount='1'/>
						<g:HTMLPanel ui:field="otherTypePanel">
							<p>
								<ui:msg>Other:</ui:msg>
								<g:TextBox ui:field="otherTypeInput"/>
							</p>
						</g:HTMLPanel>
	        		</div>
	        		<div class="{style.endRow}"></div>
	  			</p>
	  			

	  			      	
	        	<h4>
	        		<ui:msg>Summary</ui:msg>
	        		
	        		<span class="{style.optionalFieldMarker}"><ui:msg>(optional)</ui:msg></span>
	        	</h4>
	        	
	        	<p>
	        		<ui:msg>Please provide a short description of the file...</ui:msg>
	        	</p>
	        	
	        	<p>
	    	    	<g:TextArea ui:field="summaryInput" />
		    	</p>
		    	    	
	        	<p>
	        		<em><ui:msg>E.g., this file contains clinical data from ... TODO good example</ui:msg></em>
	        	</p>

        	</g:HTMLPanel>
        	
        </g:FormPanel>
    
    </g:HTMLPanel>
    
</ui:UiBinder>