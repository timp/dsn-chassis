<div	
    xmlns:xforms="http://www.w3.org/2002/xforms"
    xmlns:f="http://orbeon.org/oxf/xml/formatting" 
    xmlns="http://www.w3.org/1999/xhtml"
    xmlns:xxforms="http://orbeon.org/oxf/xml/xforms"
    xmlns:xs="http://www.w3.org/2001/XMLSchema"
    xmlns:ev="http://www.w3.org/2001/xml-events"
    xmlns:atom="http://www.w3.org/2005/Atom"
    xmlns:fr="http://orbeon.org/oxf/xml/form-runner"
    xmlns:xi="http://www.w3.org/2001/XInclude">
    
    <xforms:group ref="principal-investigators">
        
        <table class="repeat-table">
            <tr>
                <td>
                    <xforms:trigger appearance="minimal">
                        <xforms:label><img src="/apps/submitter/common/add.gif"/></xforms:label>
                        <xforms:insert 
                            ev:event="DOMActivate" 
                            context="." 
                            nodeset="person" 
                            at="1" 
                            position="before" 
                            origin="instance('ins-person-template')"/>
                    </xforms:trigger>
                </td>
                <td class="add-td">
                    <xforms:trigger appearance="minimal">
                        <xforms:label>Add a Principal Investigator</xforms:label>
                        <xforms:insert 
                            ev:event="DOMActivate" 
                            context="." 
                            nodeset="person" 
                            at="1" 
                            position="before" 
                            origin="instance('ins-person-template')"/>
                    </xforms:trigger>
                </td>
            </tr>
            <xforms:repeat nodeset="person" id="person-repeat">
                <tr>
                    <td>
                        <xforms:trigger appearance="minimal">
                            <xforms:delete 
                                ev:event="DOMActivate" 
                                context="." 
                                nodeset="." 
                                at="index('person-repeat')"/>
                            <xforms:label><img src="/apps/submitter/common/remove.gif"/></xforms:label>
                        </xforms:trigger>
                    </td>
                    <td class="form-td">
                        <xforms:input ref="name">
                            <xforms:label class="fixed-width">Name: </xforms:label>
                        </xforms:input>
                        <br/>
                        <xforms:input ref="email">
                            <xforms:label class="fixed-width">Email address: </xforms:label>
                        </xforms:input>
                        <br/>
                        <xforms:input ref="url">
                            <xforms:label class="fixed-width">Web page: </xforms:label>
                        </xforms:input>
                        <br/>
                        <xforms:input ref="organisation">
                            <xforms:label>Host organisation or institution: </xforms:label>
                        </xforms:input>
                    </td>
                </tr>
            </xforms:repeat>
        </table>
        
    </xforms:group>

</div>
