<?xml version="1.0" encoding="utf-8"?>
<!-- This file is an empty template for your own properties-local.xml file. 
	Please follow the instructions here: http://wiki.orbeon.com/forms/doc/developer-guide/configuration-properties -->
<properties xmlns:xs="http://www.w3.org/2001/XMLSchema"
	xmlns:oxf="http://www.orbeon.com/oxf/processors" xmlns:chassis="http://chassis.cggh.org/manta/processors">

	<!-- This is an example of property which overrides an existing property's 
		default value: <property as="xs:NMTOKENS" name="oxf.xforms.logging.debug" 
		value="document model submission submission-details control event action 
		analysis server html"/> -->

	<property as="xs:boolean" name="oxf.epilogue.xforms.inspector"
		value="${oxf.epilogue.xforms.inspector}" />

	<!-- Epilogue configuration -->
	<property as="xs:anyURI" name="oxf.epilogue.theme" value="oxf:/config/theme-manta.xsl" />

	<!-- UK Date formats -->
	<property as="xs:string" name="oxf.xforms.format.input.date"
		value="[D].[M].[Y]" /> <!-- [M]/[D]/[Y] or [D]/[M]/[Y] or [D].[M].[Y] -->

	<property as="xs:string" name="oxf.xforms.xbl.fr.map.key"
		value="${google-api-key}" />

	<!-- <property as="xs:string" processor-name="chassis:semail" name="test-to" 
		value="${test-email}" /> <property as="xs:string" processor-name="chassis:semail" 
		name="smtp-host" value="smtp.googlemail.com" /> <property as="xs:string" 
		processor-name="chassis:semail" name="smtp-port" value="465" /> <property 
		as="xs:string" name="oxf.schemas.http://chassis.cggh.org/manta/processors/semail" 
		value="oxf:/org/cggh/chassis/manta/processor/xml/semail.rng" /> -->

	<property as="xs:string" processor-name="oxf:email" name="encryption"
		value="ssl" />

	<property as="xs:string" processor-name="oxf:email" name="smtp-host"
		value="smtp.googlemail.com" />


	<property as="xs:string" processor-name="oxf:email" name="username"
		value="${email-user}" />

	<property as="xs:string" processor-name="oxf:email" name="password"
		value="${email-password}" />

	<property as="xs:string" processor-name="oxf:email" name="test-to"
		value="${test-email}" />

	<property as="xs:boolean" name="chassis.alfresco.send" value="${use-alfresco}" />
	<!-- Alfresco integration configuration -->
	<property as="xs:anyURI" name="chassis.alfresco.uri" value="${alfresco-uri}" />
	<property as="xs:string" name="chassis.alfresco.username"
		value="${alfresco-username}" />
	<property as="xs:string" name="chassis.alfresco.credentials"
		value="${alfresco-password}" />
</properties>
