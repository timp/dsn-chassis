<project xmlns="http://maven.apache.org/POM/4.0.0" xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
	xsi:schemaLocation="http://maven.apache.org/POM/4.0.0 http://maven.apache.org/xsd/maven-4.0.0.xsd">
	<modelVersion>4.0.0</modelVersion>
	<groupId>org.cggh.chassis</groupId>
	<artifactId>importChassisMetadata</artifactId>
	<version>0.0.6-SNAPSHOT</version>
	<packaging>war</packaging>
	<name>importChassisMetadata</name>

	<properties>
		<spring.version>3.0.5.RELEASE</spring.version>
		<hibernate.version>3.4.0.GA</hibernate.version>
		<openjpa.version>2.0.1</openjpa.version>
		<log4j-priority>debug</log4j-priority>
		<log4j-appender-ref>ConsoleAppender</log4j-appender-ref>
		<importLogs>${logsDrive}/data/import/logs/chassisMetadata.log</importLogs>
		<project.build.sourceEncoding>UTF-8</project.build.sourceEncoding>
		<project.reporting.outputEncoding>UTF-8</project.reporting.outputEncoding>
		<mysqlDriverVersion>5.1.18</mysqlDriverVersion>
		<database.chassisPruned.url>jdbc:mysql://localhost:3306/chassisPruned?storage_engine=InnoDB</database.chassisPruned.url>
		<database.chassisPruned.username>root</database.chassisPruned.username>
		<database.chassisPruned.password />
		<database.chassisPruned.dbName>chassisPruned</database.chassisPruned.dbName>
		<database.chassisPruned.host>localhost</database.chassisPruned.host>
	
		<chassis.root>https://www.wwarn.org/</chassis.root>
		<chassis.user />
		<chassis.password />
        <tomcat.username>admin</tomcat.username>
        <tomcat.password></tomcat.password>
        <!--  add /html for tomcat7  -->
        <tomcat.url>http://localhost:8080/manager</tomcat.url>
